
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="d-flex justify-content-between top p-2">
    <%= link_to root_path, class: 'text-light h1' do %>
        <i class="bi bi-arrow-left"></i>
    <% end %>
    <h2 class='text-light h1'>Sign Up</h2>
    <%= f.submit 'Save'%>
  </div>

  <div class="p-2">
    <%= f.text_field :name, autofocus: true, autocomplete: "Name", placeholder: 'Name', class: 'form-control' %>
  </div>

  <div class="p-2">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="p-2">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="p-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation', class: 'form-control' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
