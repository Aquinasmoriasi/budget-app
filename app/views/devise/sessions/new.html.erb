<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-between top p-2">
    <%= link_to root_path, class: 'text-light h1' do %>
        <i class="bi bi-arrow-left"></i>
    <% end %>
    <h2 class='text-light h1'>Log in</h2>
    <%= f.submit 'Next'%>
  </div>
   <div class="p-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control mb-2' %>
   </div>
   <div class="p-2">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class: 'form-control mb-2' %>
   </div>
<% end %>

<%= render "devise/shared/links" %>
